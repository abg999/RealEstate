<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="/css/propertiesPage.css">
<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700,900" rel="stylesheet">
  <div class="container details-section">
    <div class="row sectionAA">
      <div class="col-lg-12">
        <div class="title-prop">
        <h3><%= prop.propTitle %></h3>
        </div>
      </div>
    </div>
  	<div class="row sectionA" style="margin-top: 2em">
  		<div class="col-lg-12">
  			
       <iframe width="100%" height="700" src="https://www.youtube.com/embed/L6NuwuGB7Pg" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
  		</div>
  	</div>
  	<hr>
    <div class="row buySection">
      <div class="col-lg-12">
        <span class="price-pos"><h4>Rs <%= prop.propPrice %></h4></span><button type="button" class="btn btn-success btnCus"><% if(prop.propStatus ==="1"){ %>
          Rent Now
          <% }else{ %>
          Buy Now
          <% } %>
        </button>
      </div>
    </div>
    <hr>
  	<div class="row sectionB">
  		<div class="col-lg-12">
  			<h3>Desctiption <i class="fas fa-home"></i></h3>
        <div class="row">
        <div class="col-md-6">
          <p><%= prop.desc %></p>
        </div>
      </div>
          
          
        
  			
  		</div>
  	</div>
  	<hr>
  	<div class="row sectionC">
  		<div class="col-lg-8">
  			<h3>Address <i class="fas fa-map-marker-alt"></i></h3>
  			<p class="jumbotron"><%= prop.address %> </p>
  		</div>
  		<div class="col-lg-4" id="map">
  			
  		</div>
  	</div>
    <hr>
    <div class="row propType-section">
      <div class="col-lg-12">
        <h3>Property Specs</h3>
        <ul type="none">
          <li><i class="fas fa-bed"></i> Rooms : <%= prop.propRooms%></li>
          <li><i class="fas fa-bath"></i> Bathrooms</li>
          <li><i class="fas fa-money-bill"></i> Price : Rs.<%= prop.propPrice%></li>
          <li><i class="fas fa-warehouse"></i> Area : <%= prop.propArea%></li>
        </ul>
      </div>
    </div>
  	<hr>
    <div class="row features-section">
      <div class="col-lg-12">
      <h3>Features Available</h3>
      </div>
      <br>
      <br>
      <div class="col-lg-6">
        <ul type="none">
          <% if(prop.airCon ){%>
            <li><i class="fas fa-check icon-color"></i> Air Conditioner</li>
          <% } %>
          <% if(prop.swimming ){%>
            <li><i class="fas fa-check icon-color"></i> Swimming pool</li>
          <% } %>
          <% if(prop.heating ){%>
            <li><i class="fas fa-check icon-color"></i> Centeralized Heating</li>
          <% } %>
          <% if(prop.laundtyRoom ){%>
            <li><i class="fas fa-check icon-color"></i> Laundry Room</li>
          <% } %>
          <% if(prop.gym ){%>
            <li><i class="fas fa-check icon-color"></i> Gym</li>
          <% } %>
        </ul>
      </div>
      <div class="col-lg-6">
        <ul type="none">
          <% if(prop.windowCovering ){%>
            <li><i class="fas fa-check icon-color"></i> Window Covering</li>
          <% } %>
          <% if(prop.refigrator ){%>
            <li><i class="fas fa-check icon-color"></i> Refrigerator</li>
          <% } %>
          <% if(prop.tvwif ){%>
            <li><i class="fas fa-check icon-color"></i> Cable TV & Wi-Fi</li>
          <% } %>
          <% if(prop.microwave ){%>
            <li><i class="fas fa-check icon-color"></i> Microwave </li>
          <% } %>
          <% if(prop.microwave ){%>
            <li><i class="fas fa-check icon-color"></i> Microwave</li>
          <% } %>
        </ul>
      </div>
    </div>
    <hr>
  	<div class="row sectionD">
  		<div class="col-lg-12">
  			<h3>Properties Images <i class="fas fa-images"></i></h3>
  		</div>

  		<!-- <div id="li1"class="col-lg-4 img">
  			<div id="demo"  style="background-image: url(https://images.pexels.com/photos/127073/pexels-photo-127073.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260);width: 100%; height: 200px; background-size: contain; background-repeat: no-repeat;  " class="imgProp">
  		</div>
    </div> -->
  		 <!-- <div id="li2" class="col-lg-4 img">
  			<div id="demo2"  style="background-image: url(https://images.pexels.com/photos/106399/pexels-photo-106399.jpeg); width: 100%; height: 200px; background-size: contain; background-repeat: no-repeat;" class="imgProp">
  		</div>
    </div> -->
    <!-- <div id="li3" class="col-lg-4 img">
        <div id="demo3"  style="background-image: url(https://images.pexels.com/photos/127073/pexels-photo-127073.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260); width: 100%; height: 200px; background-size: contain; background-repeat: no-repeat;" class="imgProp">
      </div>
    </div> -->

  		
        <!-- <div id="zoomed-img" style="width: 100%; height: 700px ;background-size: 100% ;background-repeat: no-repeat; background-image: url(https://images.pexels.com/photos/127073/pexels-photo-127073.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260); "  class="col-lg-12">
        </div> -->
  		
  		<div class="wrap">
  <div id="arrow-left" class="arrow"></div>
  <div id="slider">
    <div class="slide slide1" style="background-image: url(/img/<%= prop.img1 %>)">
      <div class="slide-content">
        
      </div>
    </div>
    <div class="slide slide2" style="background-image: url(/img/<%= prop.img2 %>)">
      <div class="slide-content">
        
      </div>
    </div>
    <div class="slide slide3" style="background-image: url(/img/<%= prop.img3 %>)">
      <div class="slide-content">
        
      </div>
    </div>
  </div>
  <div id="arrow-right" class="arrow"></div>
</div> 
  	</div>
    <div class="col-lg-12">
        <button <% if(currentUser) { %> onclick="showDiv()" <% } %>  type="button" style="float: right; padding: 27px" class="btn btn-success btnCus">Contact  <i class="fas fa-phone"></i></button>
      </div>

    <div class="row">
      <div class="col-lg-12">
        
        <div id="welcomeDiv"  style="display:none;" class="answer_list" > 
          <div class="row">
            <div class="col-lg-12">
      <h3>Contact information</h3>
      </div>
            <div class="col-lg-6 col-md-12">
              <label><strong>Property owner:</strong></label>
              <span><strong><%= prop.author.username  %></strong></span>
            </div>
            <div class="col-lg-6 col-md-12">
              <label><strong>Email Id:</strong></label>
              <strong><%= prop.author.email  %></strong>
            </div>
              <div class="col-lg-8 col-md-6">
                <form action="/properties/<%= prop._id %>?_method=PUT" method="POST">
                <label for="Flag content">Status</label>
                <select  id="Flag content" name="report[reportreason]" class="custom-select mb-2 mr-sm-2 mb-sm-0">
                    <option></option>
                    <option value="Improper Information">Improper Information</option>
                    <option value="Content not suitaible for all the ages">Content not suitaible for all the ages</option>
                </select>
              </div>

        <input type="submit" name="submit" value="Report property!">
  
        </form>
      </div>
    </div>
  </div>
</div>
</div>
</div>
  
