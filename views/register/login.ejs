<% include ../partials/header %>

<link rel="stylesheet" type="text/css" href="/css/login.css">
<link rel="stylesheet" type="text/css" href="/css/register.css">
<div class="class="main-body" style="margin-top: 3rem;">
	
  <header id="register-section">
    
    <div class="dark-overlay">
      <div class="register-inner container">
        <div class="row">
          <div class="col-lg-4"></div>
              
          <div class="col-lg-4 login-style">
            <div class="card bg-primary text-center card-form">
              <div class="card-body">
                <h3>Login</h3>
                <form action="/login" method="POST">
                  <div class="form-group">
                    <input type="text" name="username" class="form-control form-control-lg" placeholder="Username">
                  </div>
                  <div class="form-group">
                    <input type="password" name="password" class="form-control form-control-lg" placeholder="password">
                  </div>
                  <input type="submit" name="" value="Submit" class="btn btn-outline-light btn-block">
                </form>
              </div>
            </div>
          </div>
          <div class="col-lg-4"></div>

        </div>
      </div>
    </div>
  </header>
 </div>

<% include ../partials/footer %>